@using FishForoshi.Entities;
@model Barber
@{
    ViewData["Title"] = "ویرایش آرایشگر";
    Layout = null;
}


<div class="col-md-12">
    <form asp-action="Edit" asp-controller="Barber" asp-route-id="@Model.Id" method="post">
        <input hidden="@Model.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" required type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <select required asp-for="Type" class="form-control">
                <option value="1">سرباز</option>
                <option value="2">کارمند</option>
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-warning btn-block">ویرایش</button>
        </div>
    </form>
</div>
