@using FishForoshi.Entities;
@model DailyFood

@{
    Layout = null;
}

<div class="content-body">
    <section>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset class="form-group">
                                        <label>نام</label>
                                        <input type="text" class="form-control" asp-for="Food.Name" autocomplete="off" disabled>

                                        <label>روز</label>
                                        <input type="text" class="form-control" asp-for="Day.Name" autocomplete="off" disabled>

                                        <label>تاریخ</label>
                                        <input type="text" class="form-control" asp-for="Date" autocomplete="off" disabled>

                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <a href="@Url.Action("ConfirmationDelete","DailyFood",new{id=Model.Id})" class="btn btn-danger btn-block">حذف</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
