@using FishForoshi.Entities;
@model Day

@{
    Layout = null;
}

<div class="content-body">
    <section>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset class="form-group">
                                        <label>نام</label>
                                        <input type="text" class="form-control" asp-for="Name" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <a href="@Url.Action("ConfirmationDelete","Day",new{id=Model.Id})"  class="btn btn-danger btn-block">حذف</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
