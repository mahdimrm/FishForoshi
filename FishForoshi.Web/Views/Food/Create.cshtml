@using FishForoshi.Entities;
@model Food
@{
    ViewData["Title"] = "اضافه کردن غذا";
    Layout = null;
}

<div class="col-md-12">
    <form asp-action="Create" asp-controller="Food" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" required type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" required type="number" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FoodType" class="control-label"></label>
            <select asp-for="FoodType" required class="form-control">
                <option value="1">سرباز</option>
                <option value="2">کارکنان</option>
            </select>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MealType" class="control-label"></label>
            <select asp-for="MealType" required class="form-control">
                <option value="1">صبحانه</option>
                <option value="2">ناهار</option>
                <option value="3">میان وعده</option>
                <option value="4">شام</option>
            </select>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageName">ارسال فایل</label>
            <div class="input-group">
                <div class="custom-file">
                    <input  type="file" name="ImgInp" id="ImgInp" class="custom-file-input">
                    <label class="custom-file-label" for="exampleInputFile">انتخاب فایل</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">افزودن</button>
        </div>
    </form>
</div>
