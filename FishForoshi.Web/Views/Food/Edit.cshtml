@using FishForoshi.Entities;
@model Food
@{
    ViewData["Title"] = "ویرایش غذا";
    Layout = null;
}


<div class="col-md-12">
    <form asp-action="Edit" asp-controller="Food" asp-route-id="@Model.Id" method="post">
        <input hidden="@Model.Id" /> 
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" required type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"  class="control-label"></label>
            <input asp-for="Price" required type="number" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FoodType" class="control-label"></label>
            <select required asp-for="FoodType" class="form-control">
                <option value="1">سرباز</option>
                <option value="2">کارکنان</option>
            </select>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-warning btn-block">ویرایش</button>
        </div>
    </form>
</div>
